@model Vidly.Models.Customer
@{
    ViewBag.Title = $"{Model.Name} details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    @if (Model.Birthdate.HasValue)
    {
        <li>@Model.Birthdate.Value.ToShortDateString()</li>
    }
    <li>@Model.MembershipType.Name</li>
</ul>
